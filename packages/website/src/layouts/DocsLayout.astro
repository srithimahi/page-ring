---
import Layout from "./Layout.astro";
import Intro from "~/components/Intro.astro";

import grass3 from "~/assets/grass3.svg";
---

<Layout>
  <main class="mx-auto max-w-4xl p-8 lg:py-12">
    <Intro />
    <div class="prose mt-8">
      <slot />
    </div>
  </main>

  <div class="h-16 w-full"></div>
  <div
    class="fixed inset-x-0 bottom-0 h-16 bg-linear-to-t from-neutral-100 via-neutral-100/80 lg:h-20"
  >
    <div class="bg-grass h-full"></div>
  </div>
</Layout>

<style define:vars={{ "img-grass": `url(${grass3.src})` }}>
  .bg-grass {
    background: var(--img-grass) repeat-x bottom / auto 100%;
  }
</style>
